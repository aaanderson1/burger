<h1>Eat Da Burger!</h1>

<h2>Delete Da Burger!</h2>

<ul>
  {{#each burger}}
    {{#unless deleted}}
      {{> burgers/burgers-block delete=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are deleted!</h2>

<ul>
  {{#each burgers}}
    {{#if deleted}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="deleted">Deleted?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Deleted!<br>
    <input type="radio" name="sleepy" value="0"> Added
  </div>

  <button type="submit">Add Burger</button>
</form>
